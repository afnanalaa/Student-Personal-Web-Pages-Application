@model Student_Profile.Models.StudentProfile
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/student/dashboard.css" asp-append-version="true">
</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid container">
        
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Port Said University</a>
        
        <div class="d-flex align-items-center">
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {{-- رابط الملف الشخصي --}}
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MyProfile", "Student")">
                            <i class="bi bi-person-circle"></i> My Profile
                        </a>
                    </li>
                </ul>
            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Settings">
                    <i class="bi bi-gear-fill"></i> 
                </button>
                
                <ul class="dropdown-menu dropdown-menu-end">
                    
                    <li class="dropdown-header fw-bold">Profile Visibility</li>
                    {{-- ربط الدوال بالـ JavaScript --}}
                    <li><a class="dropdown-item" href="#" onclick="setPrivacy('public')"><i class="bi bi-globe me-2"></i> Public</a></li>
                    <li><a class="dropdown-item" href="#" onclick="setPrivacy('university')"><i class="bi bi-person-badge me-2"></i> University Students Only</a></li>
                    <li><a class="dropdown-item" href="#" onclick="setPrivacy('private')"><i class="bi bi-lock-fill me-2"></i> Private (Admin Only)</a></li>
                    
                    <li><hr class="dropdown-divider"></li>
                    
                    <li>
                        <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                            <i class="bi bi-box-arrow-right me-2"></i> Log Out
                        </a>
                    </li>
                </ul>
            </div>
            
        </div>
    </div>
</nav>

<div class="container my-5">
    <h1 class="display-6 text-primary mb-4">👋 Welcome to Your Dashboard</h1>

    {{-- Tabs Navigation --}}
    <ul class="nav nav-tabs" id="myDashboardTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="cv-tab" data-bs-toggle="tab" data-bs-target="#cv" type="button" role="tab">
                <i class="bi bi-journal-text me-1"></i> My CV & Edit
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab">
                <i class="bi bi-send-check me-1"></i> My Posts
            </button>
        </li>
    </ul>

    <div class="tab-content p-4 border border-top-0 bg-white shadow-sm" id="myDashboardTabContent">
        
        {{-- 1. CV Tab Content --}}
        <div class="tab-pane fade show active" id="cv" role="tabpanel" tabindex="0">
            <div class="text-end mb-3">
                {{-- ربط زر التعديل بصفحة تعديل الملف الشخصي (ProfileEdit) --}}
                <a href="@Url.Action("ProfileEdit", "StudentHome")" class="btn btn-warning" id="editCvBtn">
                    <i class="bi bi-pencil-square me-1"></i> Edit CV Data
                </a>
            </div>
            
            <div id="cvDisplayArea">
                {{-- هنا سيتم عرض CV الحالي (يمكن استخدام Partial View هنا) --}}
                @* @Html.Partial("_StudentCVDisplay", Model.CVData) 
 *@
                <div class="actions mt-3">
                    <button id="printBtn" class="btn btn-primary print-btn">Download / Print PDF</button>
                </div>
            </div>
        </div>

        {{-- 2. Posts Tab Content --}}
        <div class="tab-pane fade" id="posts" role="tabpanel" tabindex="0">
            {{-- هنا يتم تضمين قائمة المنشورات وحالتها (عادةً عبر Partial View) --}}
            @* @Html.Partial("_MyPostsStatus", Model.MyPosts) *@
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/student/dashboard.js" asp-append-version="true"></script>
   
}