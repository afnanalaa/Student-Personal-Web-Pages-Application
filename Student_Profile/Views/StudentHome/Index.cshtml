@model IEnumerable<Student_Profile.Models.Post>

@{
    ViewData["Title"] = "Home Feed";
}

<h2>Home Feed</h2>

<div class="mb-3">
    <a asp-controller="Student" asp-action="MyProfile" class="btn btn-primary">My Profile</a>
    <a asp-controller="Post" asp-action="CreatePost" class="btn btn-success">Create Post</a>
</div>

@foreach (var post in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@post.User.FullName</h5>
            <p class="card-text">@post.Content</p>
            <small class="text-muted">Posted on @post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
    </div>
}
