@model Student_Profile.ViewModels.StudentRegisterViewModel

@{
    ViewData["Title"] = "Register Student";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg p-4 p-md-5">

                <h2 class="card-title text-center mb-4 text-primary fw-bold">Create Your Student Account</h2>
                <p class="text-center text-muted border-bottom pb-3 mb-4">
                    Your account will be <span class="highlight-text">pending</span> until approved by the Administration.
                </p>

                @* 1. تحويل وسم <form> إلى Html.BeginForm للربط بـ AccountController.Register *@
                @using (Html.BeginForm("RegisterStudent", "Account", FormMethod.Post, new { id = "signupForm", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken() @* مهم جداً للأمان (CSRF Protection) *@

                    <div class="row">
                        @* يمكنك عرض جميع رسائل التحقق هنا *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* 2. تحويل الحقول باستخدام Tag Helpers أو Html Helpers *@

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" required>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="s123456@eng.psu.edu.eg" required>
                            <div class="form-text">Must be valid for verification.</div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NationalId" class="form-label">Student National ID (14 Digits)</label>
                            <input asp-for="NationalId" class="form-control" maxlength="14" required>
                            <span asp-validation-for="NationalId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" maxlength="14" required>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        @* حقل رفع الملفات *@
                        <div class="mb-3">
                            <label asp-for="StudentCardOrNationalImage" class="form-label">Upload Scanned National ID</label>
                            <input type="file" asp-for="StudentCardOrNationalImage" class="form-control" accept=".pdf,.jpg,.png" required>
                            <div class="form-text">Mandatory for Administration approval.</div>
                            <span asp-validation-for="StudentCardOrNationalImage" class="text-danger"></span>
                        </div>

                        @* حقل كلمة المرور *@
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="password" required> 

                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i id="eyeIcon" class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @* حقل تأكيد كلمة المرور *@
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" required>

                                <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                    <i id="eyeIconConfirm" class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success w-100 btn-lg">Register and Submit for Approval</button>
                        </div>
                    </div>
                }

                <div class="text-center mt-4">
                    @* استخدام @Url.Action للربط بصفحة تسجيل الدخول *@
                    Already have an account? <a href="@Url.Action("Login", "Account")">Login here</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/student/signup.js"></script>
}
