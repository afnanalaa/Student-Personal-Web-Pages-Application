@model Student_Profile.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-lg p-4 p-md-5">
                <h2 class="card-title text-center mb-4 text-primary fw-bold">Student Login</h2>
                <p class="text-center text-muted border-bottom pb-3 mb-4">
                    Access your personal profile using your University credentials.
                </p>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
                {
                    @Html.AntiForgeryToken() 

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">University Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="s123456@eng.psu.edu.eg" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="password" required>

                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i id="eyeIcon" class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                }

                <div class="text-center mt-4">
                    Don't have an account? <a href="@Url.Action("RegisterStudent", "Account")">Register here</a>
                    <br>
                    <small><a href="@Url.Action("Login", "Admin")" class="text-warning">Login as Admin</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/student/signup.js"></script>
}
