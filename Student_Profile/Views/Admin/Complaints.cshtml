@model List<Student_Profile.Models.Complaint>

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Complaints</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/admin_style.css" asp-append-version="true">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container">
            <a class="navbar-brand text-warning" href="@Url.Action("Dashboard", "Admin")">ADMIN PANEL</a>
           
        </div>
    </nav>

    <div class="container pb-5" style="margin-top:30px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark"><i class="bi bi-envelope-paper-fill me-2 text-info"></i> All Student Complaints (@Model.Count)</h2>
            <span class="badge bg-secondary">System Date: @DateTime.Now.ToString("dd MMM yyyy")</span>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="card p-5 text-center shadow-sm">
                <i class="bi bi-chat-square-check text-muted display-1"></i>
                <p class="mt-3 fs-4 text-muted">No complaints submitted yet. Everything looks clean!</p>
            </div>
        }
        else
        {
            <div class="card shadow-sm overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-3">#</th>
                                <th>Student</th>
                                <th>Subject & Content</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var complaint = Model[i];
                                <tr>
                                    <td class="ps-3 fw-bold text-muted">@(i + 1)</td>
                                    <td>
                                        <div class="fw-bold">@complaint.User?.FullName</div>
                                        <div class="small text-muted">@complaint.User?.Email</div>
                                    </td>
                                    <td>
                                        <div class="text-info fw-bold">@complaint.Subject</div>
                                        <small class="text-truncate d-inline-block" style="max-width: 200px;">@complaint.Content</small>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@complaint.Type</span></td>
                                    <td>
                                        @if (complaint.Status == "Pending")
                                        {
                                            <span class="status-badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (complaint.Status == "Solved" || complaint.Status == "Resolved")
                                        {

                                            <span class="status-badge bg-success text-white">Resolved</span>
                                        }
                                        else
                                        {

                                            <span class="status-badge bg-info text-white">@complaint.Status</span>
                                        }
                                    </td>
                                    <td class="small">@complaint.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">
                                        <div class="btn-group gap-1">
                                            <form asp-action="AssignToTechnical" method="post">
                                                <input type="hidden" name="id" value="@complaint.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning btn-action" title="Assign to Technical"><i class="bi bi-tools"></i></button>
                                            </form>

                                            <form asp-action="MarkAsResolved" method="post">
                                                <input type="hidden" name="id" value="@complaint.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-success btn-action" title="Resolve"><i class="bi bi-check-lg"></i></button>
                                            </form>

                                            <button class="btn btn-sm btn-outline-primary btn-action" data-bs-toggle="modal" data-bs-target="#modal-@complaint.Id">
                                                <i class="bi bi-chat-dots-fill"></i>
                                            </button>
                                        </div>

                                        <div class="modal fade" id="modal-@complaint.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content text-start">
                                                    <form asp-action="ContactSender" method="post">
                                                        <div class="modal-header bg-primary text-white">
                                                            <h5 class="modal-title">Reply to @complaint.User?.FullName</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" name="id" value="@complaint.Id" />
                                                            <div class="mb-3">
                                                                <label class="fw-bold">Complaint Details:</label>
                                                                <p class="p-2 bg-light rounded small">@complaint.Content</p>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="fw-bold text-primary">Your Comment:</label>
                                                                <textarea name="adminComment" class="form-control" rows="4" placeholder="Type your response here..." required>@complaint.AdminComment</textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary">Send Response</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>