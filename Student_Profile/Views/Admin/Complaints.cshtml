@model List<Student_Profile.Models.Complaint>

@{
    ViewData["Title"] = "Manage Complaints";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-info">All Student Complaints (@Model.Count)</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No complaints submitted yet.</div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="bg-info text-white">
                <tr>
                    <th>#</th>
                    <th>Student</th>
                    <th>Subject</th>
                    <th>Content</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Admin Comment</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var complaint = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@complaint.User?.FullName (@complaint.User?.Email)</td>
                        <td>@complaint.Subject</td>
                        <td>@complaint.Content</td>
                        <td>@complaint.Type</td>
                        <td>@complaint.Status</td>
                        <td>@complaint.AdminComment</td>
                        <td>@complaint.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <form asp-action="AssignToTechnical" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@complaint.Id" />
                                <button type="submit" class="btn btn-warning btn-sm mb-1">Assign to Technical</button>
                            </form>

                            <form asp-action="MarkAsResolved" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@complaint.Id" />
                                <button type="submit" class="btn btn-success btn-sm mb-1">Mark as Resolved</button>
                            </form>

                            <form asp-action="ContactSender" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@complaint.Id" />
                                <input type="text" name="adminComment" placeholder="Add Comment" class="form-control form-control-sm mb-1" required />
                                <button type="submit" class="btn btn-primary btn-sm">Contact Sender</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
</div>
