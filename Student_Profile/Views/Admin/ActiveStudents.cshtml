@model List<Student_Profile.Models.ApplicationUser>

@{
    ViewData["Title"] = "Active Students";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/admin/admin_style.css" asp-append-version="true">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container">
            <a class="navbar-brand text-warning" href="@Url.Action("Dashboard", "Admin")">ADMIN PANEL</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("ReviewRequests", "Admin")">Review Requests</a></li>
                <li class="nav-item"><a class="nav-link active" href="@Url.Action("Moderation", "Admin")">Content Moderation</a></li>
                <li class="nav-item"><a class="btn btn-danger ms-3" href="@Url.Action("Index", "Home")">Log Out</a></li>
            </ul>
        </div>
    </nav>

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-success">Active Students (@Model.Count)</h2>


        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
        }

        <h1 class="fw-bold mb-4 text-primary">Pending Account Verification (@Model.Count)</h1>

        @if (!Model.Any())
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle me-2"></i> No pending student accounts at the moment.
            </div>
        }
        else
        {
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="bg-success text-white">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var student = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@student.FullName</td>
                        <td>@student.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
