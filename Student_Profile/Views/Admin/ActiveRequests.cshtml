@model List<Student_Profile.Models.ApplicationUser>

@{
    ViewData["Title"] = "Active Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-success">Active Students (@Model.Count)</h2>

    @if (!Model.Any())
    {
        <p>No active students found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="bg-success text-white">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var student = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@student.FullName</td>
                        <td>@student.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
