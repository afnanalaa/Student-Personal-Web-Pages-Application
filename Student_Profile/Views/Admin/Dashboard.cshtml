@model Student_Profile.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PSU</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/admin/admin_style.css" asp-append-version="true"> 
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid container">
            
            <a class="navbar-brand text-warning" href="@Url.Action("Dashboard", "Admin")">ADMIN PANEL</a>
            
            <ul class="navbar-nav ms-auto">

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ReviewRequests", "Admin")">Review Requests</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "AdminModeration")">Content Moderation</a>
                </li>
                
                @using (Html.BeginForm("Logout", "Admin", FormMethod.Post, new { @class = "ms-3", id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Log Out</button>
                }
            </ul>
        </div>
    </nav>

    <div class="container my-5">
        <h1 class="display-5 fw-bold mb-4 text-warning">System Overview</h1>
        <section class="row mb-5">
            <h3 class="mb-4">Quick Stats (Analytics)</h3>
            
            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-people-fill display-4 me-3"></i>
                        <div>
                            <h5 class="mb-0">Active Students</h5>
                            <p class="fs-3 fw-bold" id="totalStudents">@Model.TotalStudents.ToString("N0")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm bg-warning text-dark">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-hourglass-split display-4 me-3"></i>
                        <div>
                            <h5 class="mb-0">Pending Requests & Posts</h5>
                            <p class="fs-3 fw-bold" id="pendingRequests">@Model.PendingRequests</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-flag-fill display-4 me-3"></i>
                        <div>
                            <h5 class="mb-0">Content & Complaints</h5>
                            <p class="fs-3 fw-bold" id="flaggedContent">@Model.FlaggedContentCount</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="row">
            <h3 class="mb-4">Core Administration Tasks</h3>
            
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ReviewRequests", "Admin")" class="card p-4 shadow-sm h-100 text-decoration-none bg-light">
                    <h4><i class="bi bi-person-plus me-2"></i> Approve New Accounts</h4>
                    <p class="text-muted">View pending sign-up requests and verify student identity.</p>
                </a>
            </div>
            
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("Index", "AdminModeration")" class="card p-4 shadow-sm h-100 text-decoration-none bg-light">
                    <h4><i class="bi bi-shield-lock me-2"></i> Content & Complaints</h4>
                    <p class="text-muted">Review flagged content, manage banned words, and handle student reports.</p>
                </a>
            </div>

            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ActiveStudents", "Admin")" class="card p-4 shadow-sm h-100 text-decoration-none bg-light">
                    <h4><i class="bi bi-people me-2"></i> Active Students List</h4>
                    <p class="text-muted">View and manage the directory of all approved student accounts in the system.</p>
                </a>
            </div>

        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>