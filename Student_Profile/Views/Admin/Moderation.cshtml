@model Student_Profile.ViewModels.ModerationViewModel
@{
    ViewData["Title"] = "Content & Complaint Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/admin_style.css" asp-append-version="true">

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark ">
        <div class="container">
            <a class="navbar-brand text-warning" href="@Url.Action("Dashboard","Admin")">ADMIN PANEL</a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ReviewRequests","Admin")">Review Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "AdminModeration")">Moderation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "BannedWords")">
                        <i class="bi bi- exclamation-octagon"></i> Content Policy
                    </a>
                </li>
                <li class="nav-item">
                    <form asp-action="Logout" asp-controller="Admin" method="post">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-danger ms-3">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container my-5">
        <h2 class="fw-bold text-primary mb-4">Content & Complaints Moderation</h2>

        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#reported">
                    🚩 Reported Posts (@Model.ReportedPosts.Count)
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#complaints">
                    💬 Complaints (@Model.Complaints.Count)
                </button>
            </li>
        </ul>

        <div class="tab-content border border-top-0 p-4 bg-white shadow-sm">

            <div class="tab-pane fade show active" id="reported">
                @if (!Model.ReportedPosts.Any())
                {
                    <div class="alert alert-success mt-3">No reported posts.</div>
                }
                else
                {
                    @foreach (var post in Model.ReportedPosts)
                    {
                        <div class="card mb-3 border-danger">
                            <div class="card-header bg-danger-subtle d-flex justify-content-between">
                                <span>Post by: <b>@post.User?.FullName</b></span>
                                <small>@post.CreatedAt.ToString("g")</small>
                            </div>
                            <div class="card-body">
                                <p>@post.Content</p>
                                <div class="d-flex gap-2">
                                    <form asp-action="ApprovePost" asp-controller="AdminModeration" method="post">
                                        <input type="hidden" name="id" value="@post.Id" />
                                        <button class="btn btn-success">✔ Approve</button>
                                    </form>
                                    <form asp-action="RejectPost" asp-controller="AdminModeration" method="post">
                                        <input type="hidden" name="id" value="@post.Id" />
                                        <button class="btn btn-danger">❌ Remove</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="tab-pane fade" id="complaints">
                @if (!Model.Complaints.Any())
                {
                    <div class="alert alert-success mt-3">No pending complaints.</div>
                }
                else
                {
                    @foreach (var complaint in Model.Complaints)
                    {
                        <div class="card mb-3 border-info">
                            <div class="card-header bg-info-subtle d-flex justify-content-between">
                                <span>
                                    <b>@complaint.Subject</b>
                                    <span class="badge bg-secondary ms-2">@complaint.Type</span>
                                </span>
                                <small>@complaint.CreatedAt.ToString("g")</small>
                            </div>
                            <div class="card-body">
                                <p>@complaint.Content</p>
                                <div class="d-flex flex-wrap gap-2 mt-3">
                                    <form asp-action="AssignToTechnical" asp-controller="Admin" method="post">
                                        <input type="hidden" name="id" value="@complaint.Id" />
                                        <button class="btn btn-warning">🛠 Assign to Technical</button>
                                    </form>
                                    <form asp-action="MarkAsResolved" asp-controller="Admin" method="post">
                                        <input type="hidden" name="id" value="@complaint.Id" />
                                        <button class="btn btn-success">✔ Mark as Resolved</button>
                                    </form>
                                    <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#comment-@complaint.Id">
                                        💬 Contact Student
                                    </button>
                                </div>
                                <div class="collapse mt-3" id="comment-@complaint.Id">
                                    <form asp-action="ContactSender" asp-controller="Admin" method="post">
                                        <input type="hidden" name="id" value="@complaint.Id" />
                                        <textarea name="adminComment" class="form-control mb-2" rows="3" placeholder="Write your comment..."></textarea>
                                        <button class="btn btn-primary">📩 Send Comment</button>
                                    </form>
                                </div>
                                @if (!string.IsNullOrEmpty(complaint.AdminComment))
                                {
                                    <div class="alert alert-light mt-3">
                                        <strong>Admin Comment:</strong><br />
                                        @complaint.AdminComment
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
