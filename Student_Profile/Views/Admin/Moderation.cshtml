@model Student_Profile.ViewModels.ModerationViewModel

@{
    ViewData["Title"] = "Content & Complaint Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content & Complaint Management - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/admin_style.css">
</head>
<body>

    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container">
            <a class="navbar-brand text-warning" href="@Url.Action("Dashboard", "Admin")">ADMIN PANEL</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("ReviewRequests", "Admin")">Review Requests</a></li>
                <li class="nav-item"><a class="nav-link active" href="@Url.Action("Moderation", "Admin")">Content Moderation</a></li>
                <li class="nav-item"><a class="btn btn-danger ms-3" href="@Url.Action("Index", "Home")">Log Out</a></li>
            </ul>
        </div>
    </nav>

    <div class="container my-5">

        <h1 class="fw-bold mb-5 text-warning">Content and Complaints Management</h1>

        <ul class="nav nav-tabs" id="moderationTabs" role="tablist">
           
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="flagged-tab" data-bs-toggle="tab" data-bs-target="#flagged-content" type="button" role="tab">
                    <i class="bi bi-flag-fill me-1"></i> Reported Content
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="complaints-tab" data-bs-toggle="tab" data-bs-target="#student-complaints" type="button" role="tab">
                    <i class="bi bi-chat-dots-fill me-1"></i> Student Complaints (@Model.Complaints.Count)
                </button>
            </li>
        </ul>

        <div class="tab-content p-4 border border-top-0 bg-white shadow-sm" id="moderationTabsContent">

          
            <!-- Reported Content (Placeholder) -->
            <div class="tab-pane fade" id="flagged-content" role="tabpanel">
                <h4 class="mb-3 text-danger">Action Required: Inappropriate Content Reports</h4>
                <div class="alert alert-secondary">No reported content yet.</div>
            </div>

            <!-- Complaints -->
            <div class="tab-pane fade" id="student-complaints" role="tabpanel">
                <h4 class="mb-3 text-info">Review Student Issues and Feedback</h4>

                @if (!Model.Complaints.Any())
                {
                    <div class="alert alert-success">No pending complaints.</div>
                }
                else
                {
                    @foreach (var complaint in Model.Complaints)
                    {
                        <div class="card mb-3 border-info">
                            <div class="card-header bg-info-subtle d-flex justify-content-between">
                                <span class="fw-bold">Complaint Type: @complaint.Type</span>
                                <small class="text-muted">@complaint.CreatedAt.ToString("g")</small>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@complaint.Subject</h5>
                                <p class="card-text">@complaint.Content</p>

                                <form asp-action="SolveComplaint" asp-controller="AdminModeration" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@complaint.Id" />
                                    <button class="btn btn-primary me-2">Mark as Solved</button>
                                </form>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
