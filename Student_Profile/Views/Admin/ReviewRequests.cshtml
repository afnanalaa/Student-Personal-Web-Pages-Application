@model Student_Profile.ViewModels.PendingRequestsViewModel

@{
    ViewData["Title"] = "Pending Requests";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/admin_style.css" asp-append-version="true">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container">
            <a class="navbar-brand text-warning" href="@Url.Action("Dashboard", "Admin")">ADMIN PANEL</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link active" href="@Url.Action("ReviewRequests", "Admin")">Review Requests</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "AdminModeration")">Content Moderation</a></li>
                <li class="nav-item"><a class="btn btn-danger ms-3" href="@Url.Action("Index", "Home")">Log Out</a></li>
            </ul>
        </div>
    </nav>

    <div class="container my-5">

        <h1 class="fw-bold mb-4 text-primary">Pending Requests</h1>

        <ul class="nav nav-tabs mb-4" id="pendingTabs" role="tablist">

            <li class="nav-item" role="presentation">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#students-tab" type="button" role="tab">
                    <i class="bi bi-person-badge me-1"></i> Pending Students (@Model.PendingAccounts.Count)
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#posts-tab" type="button" role="tab">
                    <i class="bi bi-card-image me-1"></i> Pending Posts (@Model.PendingPosts.Count)
                </button>
            </li>

        </ul>

        <div class="tab-content">

            <!-- Pending Students Tab -->
            <div class="tab-pane fade show active" id="students-tab" role="tabpanel">
                <h4 class="mb-3 text-secondary">Pending Student Account Verification</h4>

                @if (!Model.PendingAccounts.Any())
                {
                    <div class="alert alert-success">No pending student accounts.</div>
                }
                else
                {
                    <table class="table table-striped table-hover shadow-sm">
                        <thead class="bg-warning text-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>National ID</th>
                                <th>Scanned ID</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.PendingAccounts.Count; i++)
                            {
                                var st = Model.PendingAccounts[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@st.FullName</td>
                                    <td>@st.Email</td>
                                    <td>@st.NationalId</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(st.StudentCardImageORNationalUrl))
                                        {
                                            <a href="@Url.Content(st.StudentCardImageORNationalUrl)" target="_blank">
                                                <img src="@Url.Content(st.StudentCardImageORNationalUrl)" style="max-width: 100px;" />
                                            </a>
                                        }
                                        else
                                        {
                                            <span>N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#approveStudentModal-@st.Id">Approve</button>
                                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectStudentModal-@st.Id">Reject</button>
                                    </td>
                                </tr>

                                <!-- Approve Modal -->
                                <div class="modal fade" id="approveStudentModal-@st.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-controller="Admin" asp-action="ApproveStudent" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@st.Id" />
                                                <div class="modal-header bg-success text-white">
                                                    <h5 class="modal-title">Approve Student</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to approve <b>@st.FullName</b>?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-success">Approve</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectStudentModal-@st.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-controller="Admin" asp-action="RejectStudent" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@st.Id" />
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Reject Student</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to reject <b>@st.FullName</b>?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Reject</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                }
            </div>

            <!-- Pending Posts Tab -->
            <div class="tab-pane fade" id="posts-tab" role="tabpanel">
                <h4 class="mb-3 text-secondary">Pending Student Posts</h4>

                @if (!Model.PendingPosts.Any())
                {
                    <div class="alert alert-success">No pending posts.</div>
                }
                else
                {
                    @foreach (var post in Model.PendingPosts)
                    {
                        <div class="card mb-3 shadow-sm border-warning">
                            <div class="card-header bg-warning-subtle d-flex justify-content-between">
                                <span class="fw-bold">Post by: @post.User.FullName</span>
                                <small class="text-muted">@post.CreatedAt.ToString("g")</small>
                            </div>
                            <div class="card-body">
                                <p>@post.Content</p>

                                @if (!string.IsNullOrEmpty(post.ImageFile))
                                {
                                    <img src="@post.ImageFile" class="img-fluid rounded mb-3" alt="Post Image" style="max-width: 300px;">

                                    @* <img src="@Url.Content(post.ImageFile)" class="img-fluid rounded mb-3" alt="Post Image"> *@
                                }

                                <button class="btn btn-success btn-sm me-2" data-bs-toggle="modal" data-bs-target="#approvePostModal-@post.Id">Approve & Publish</button>
                                <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectPostModal-@post.Id">Reject</button>
                            </div>
                        </div>

                        <!-- Approve Post Modal -->
                        <div class="modal fade" id="approvePostModal-@post.Id" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-controller="AdminModeration" asp-action="ApprovePost" method="post">
                                        <input type="hidden" name="id" value="@post.Id">
                                        <div class="modal-header bg-success text-white">
                                            <h5 class="modal-title">Approve Post</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Approve this post from <b>@post.User.FullName</b>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-success">Approve</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Reject Post Modal -->
                        <div class="modal fade" id="rejectPostModal-@post.Id" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-controller="AdminModeration" asp-action="RejectPost" method="post">
                                        <input type="hidden" name="id" value="@post.Id">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">Reject Post</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Reject this post from <b>@post.User.FullName</b>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Reject</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
