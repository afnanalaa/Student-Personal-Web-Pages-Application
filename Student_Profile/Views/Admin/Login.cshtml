@model Student_Profile.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PSU</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/admin_sign.css" asp-append-version="true">
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid container">
            <a class="navbar-brand text-warning" href="@Url.Action("Index", "Home")">PSU Admin System</a>
        </div>
    </nav>

    <div class="container my-5" id="form">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg p-5">
                    <h2 class="card-title text-center mb-4 text-warning fw-bold">ADMIN ACCESS</h2>
                    <p class="text-center text-muted border-bottom pb-3 mb-4">
                        Please use your administrative credentials.
                    </p>

                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { id = "adminLoginForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Admin Username or Email</label>
                            <input asp-for="Email" type="text" class="form-control" id="adminId" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="adminPassword" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                            <label asp-for="RememberMe" class="form-check"accesskey=""></label>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">Log In</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>