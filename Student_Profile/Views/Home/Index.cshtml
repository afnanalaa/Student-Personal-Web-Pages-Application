@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Header -->
    <header class="text-center mb-5 p-5 bg-light rounded-3 shadow-sm">
        <h1 class="display-4 fw-bold text-primary">Engineering Students Personal Pages Platform</h1>
        <p class="lead">Share your CV, list your interests, and connect with the university community.</p>
    </header>

    <!-- Start Journey / Discover Peers -->
    <section class="row">
        <div class="col-md-6 mb-4">
            <div class="card p-4 shadow-sm h-100">
                <h3>Start Your Journey</h3>
                <p>Register and fill in your details to create your unique personal page. (Requires Admin Approval)</p>
                <a href="@Url.Action("RegisterStudent", "Account")" class="btn btn-primary mt-auto">Create New Account</a>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card p-4 shadow-sm h-100">
                <h3>Discover Your Peers</h3>
                <p>Browse the student directory and learn about your colleagues' projects and interests.</p>
                <a href="@Url.Action("Index", "Student")" class="btn btn-outline-primary mt-auto">Browse Directory</a>
            </div>
        </div>
    </section>
</div>

<!-- Submit Complaint Section -->
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card p-4 shadow-lg custom-complaint-card">

                <h3 class="mb-3" style="color: #007bff;">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Report an Issue / Complaint
                </h3>
                <p class="text-secondary">
                    Use this form to report technical issues, inappropriate content, or administrative complaints related to the platform or the department.
                </p>

                @using (Html.BeginForm("Create", "Complaint", FormMethod.Post, new { id = "complaintForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="subject" class="form-label fw-bold">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>

                    <div class="mb-4">
                        <label for="content" class="form-label fw-bold">Detailed Description of the Problem</label>
                        <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-2 submit-complaint-btn">Submit Complaint</button>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                }

                @* <a href="@Url.Action("MyComplaints", "Complaint")" class="btn btn-link mt-3">View My Complaints</a> *@

            </div>
        </div>
    </div>
</div>
