@model IEnumerable<Student_Profile.Models.BannedWord>

@{
    ViewData["Title"] = "Manage Banned Words";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-shield-lock-fill"></i> Content Policy: Banned Words</h4>
            <span class="badge bg-light text-danger">Total: @Model.Count()</span>
        </div>
        <div class="card-body">

            <form asp-action="Create" method="post" class="row g-3 mb-4">
                <div class="col-md-9">
                    <input type="text" name="word" class="form-control" placeholder="Enter inappropriate word or phrase..." required>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-plus-circle"></i> Add to Blacklist
                    </button>
                </div>
            </form>

            <hr />

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Prohibited Word / Phrase</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">No banned words defined yet.</td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-dark">@item.Word</td>
                                <td class="text-end">
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('Remove this word from blacklist?');" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3 container">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3 container">@TempData["Error"]</div>
}