@model IEnumerable<Student_Profile.Models.StudentProfile>

@if (Model.Any())
{
    @foreach (var student in Model)
    {
        <a asp-controller="Student" asp-action="Details" asp-route-slug="@student.ProfileSlug"
           class="d-flex align-items-center p-2 text-decoration-none border-bottom hover-bg-light text-dark">
            <img src="~/uploads/student-profiles/@(student.ProfileImageUrl ?? "default-avatar.png")"
                 class="rounded-circle me-2" style="width: 35px; height: 35px; object-fit: cover;">
            <div>
                <div class="fw-bold small">@student.User.FullName</div>
                <div class="text-muted" style="font-size: 0.75rem;">@student.Department</div>
            </div>
        </a>
    }
}
else
{
    <div class="p-3 text-muted small text-center">No students found.</div>
}