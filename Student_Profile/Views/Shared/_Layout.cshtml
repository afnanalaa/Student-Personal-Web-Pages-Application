<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Port Said University</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Student_Profile.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        footer {
            background-color: #212529;
            color: #f8f9fa;
            text-align: center;
            padding: 1rem 0;
            width: 100%;
        }
        .logout-btn {
            background: none;
            border: 1px solid rgba(255,255,255,0.5);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            transition: 0.3s;
        }

            .logout-btn:hover {
                background: rgba(255,255,255,0.1);
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">Port Said University</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("StudentsDirectory", "Home")">Students Directory</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-info fw-bold" href="@Url.Action("MyProfile", "Student")">
                                <i class="bi bi-person-circle me-1"></i> My Profile
                            </a>
                        </li>
                    }
                    else if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-warning" href="@Url.Action("Login", "Admin")">Admin System</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="btn btn-success text-white px-4 rounded-pill shadow-sm" href="@Url.Action("RegisterStudent", "Account")">Sign Up Now</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "d-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="logout-btn ms-lg-2">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="content-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <small>&copy; 2025 Port Said University - Computer And Control Engineering Department</small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>