@model Student_Profile.ViewModels.StudentProfileViewModel

@{
    ViewData["Title"] = "Edit My CV Data";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/student/dashboard.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/student/cv.css" asp-append-version="true">





</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid container">

            <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <span class="text-white">Port Said</span><span class="text-info ms-1">University</span>
            </a>
        <div class="d-flex align-items-center">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MyProfile", "Student")">
                            <i class="bi bi-person-circle"></i> My Profile
                        </a>
                    </li>
                </ul>
            </div>

           

        </div>
    </div>
</nav>


<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white p-4">
                    <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Professional Profile</h2>
                    <p class="mb-0 opacity-75">Update your professional information and contact details</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="EditProfile" asp-controller="Student" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row">
                            <div class="col-md-4 border-end">
                                <div class="text-center mb-4">
                                    <label class="form-label d-block fw-bold text-muted">Profile Picture</label>
                                    <div class="position-relative d-inline-block">
                                        <img src="~/uploads/student-profiles/@(Model.ExistingProfileImage ?? "default-avatar.png")"
                                             class="rounded-circle img-thumbnail shadow-sm mb-3"
                                             style="width: 150px; height: 150px; object-fit: cover;"
                                             id="previewImage" alt="Profile Image">

                                        <div class="mb-3">
                                            <input asp-for="ProfileImage" class="form-control form-control-sm" type="file"
                                                   accept="image/*" onchange="previewFile()">
                                            <small class="text-muted d-block mt-1">Accepted: JPG, PNG (Max 2MB)</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label fw-bold text-muted">Academic Department</label>
                                    <input asp-for="Department" class="form-control border-primary-subtle" placeholder="e.g. Computer and Control" />
                                    <span asp-validation-for="Department" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-bold text-muted">City / Location</label>
                                    <input asp-for="Address" class="form-control border-primary-subtle" placeholder="e.g. Port Said, Egypt" />
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ContactInformation" class="form-label fw-bold text-muted">LinkedIn / Portfolio URL</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-link-45deg"></i></span>
                                        <input asp-for="ContactInformation" class="form-control border-primary-subtle" placeholder="https://linkedin.com/in/username" />
                                    </div>
                                    <span asp-validation-for="ContactInformation" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-8 ps-md-4">
                                <div class="mb-4">
                                    <label asp-for="Bio" class="form-label fw-bold text-muted">Professional Summary (Bio)</label>
                                    <textarea asp-for="Bio" class="form-control border-primary-subtle" rows="3"
                                              placeholder="Briefly describe your professional background and goals..."></textarea>
                                    <span asp-validation-for="Bio" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Skills" class="form-label fw-bold text-muted">Skills (Comma separated)</label>
                                    <input asp-for="Skills" class="form-control border-primary-subtle"
                                           placeholder="e.g. ASP.NET Core, SQL Server, C#, JavaScript, Figma" />
                                    <span asp-validation-for="Skills" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Projects" class="form-label fw-bold text-muted">Key Projects</label>
                                    <textarea asp-for="Projects" class="form-control border-primary-subtle" rows="5"
                                              placeholder="List your projects (each on a new line)..."></textarea>
                                    <span asp-validation-for="Projects" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Interests" class="form-label fw-bold text-muted">Professional Interests</label>
                                    <input asp-for="Interests" class="form-control border-primary-subtle"
                                           placeholder="e.g. Web Development, AI, DevOps, Cyber Security" />
                                    <span asp-validation-for="Interests" class="text-danger small"></span>
                                </div>

                                <div class="d-flex gap-2 justify-content-end mt-5 border-top pt-4">
                                    <a asp-action="StudentDashboard" class="btn btn-outline-secondary px-4">
                                        <i class="bi bi-x-circle me-1"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary px-5 shadow-sm">
                                        <i class="bi bi-check2-circle me-1"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewFile() {
            const preview = document.querySelector('#previewImage');
            const file = document.querySelector('input[type=file]').files[0];
            const reader = new FileReader();

            reader.addEventListener("load", function () {
                preview.src = reader.result;
            }, false);

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
}

        </body>
        </html>