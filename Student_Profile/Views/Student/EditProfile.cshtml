@model Student_Profile.ViewModels.StudentProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Edit Profile</h2>

<!-- ✅ الفورم الأساسي -->
<form asp-action="EditProfile" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Profile Image:</label><br />
        <img src="~/uploads/student-profiles/@Model.ExistingProfileImage" width="150" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="ProfileImage">Upload New Image</label>
        <input asp-for="ProfileImage" type="file" class="form-control" />
        <span asp-validation-for="ProfileImage" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Interests"></label>
        <input asp-for="Interests" class="form-control" />
        <span asp-validation-for="Interests" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Skills"></label>
        <input asp-for="Skills" class="form-control" />
        <span asp-validation-for="Skills" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="GitHub"></label>
        <input asp-for="GitHub" class="form-control" />
        <span asp-validation-for="GitHub" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="LinkedIn"></label>
        <input asp-for="LinkedIn" class="form-control" />
        <span asp-validation-for="LinkedIn" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="EmailContact"></label>
        <input asp-for="EmailContact" class="form-control" />
        <span asp-validation-for="EmailContact" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>

<!-- ✅ فورم منفصل لحذف الصورة -->
<form asp-action="RemoveProfileImage" method="post" class="mt-2">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Remove Profile Image</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
