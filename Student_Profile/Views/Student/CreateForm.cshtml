@model Student_Profile.ViewModels.StudentProfileViewModel

@{
    ViewData["Title"] = "Create Student Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/student/form.css" asp-append-version="true">
</head>
<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="card shadow-lg p-5">
                    <h2 class="text-primary mb-4">Student Details</h2>

                    @using (Html.BeginForm("CreateForm", "Student", FormMethod.Post, new { id = "cvForm", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" type="text" class="form-control" maxlength="200" placeholder="e.g. 123 Main St" id="address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Department" class="form-label"></label>
                            <input asp-for="Department" type="text" class="form-control" placeholder="e.g. Computer Science" id="department">
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Bio" class="form-label">Professional Summary</label>
                            <textarea asp-for="Bio" rows="3" class="form-control" maxlength="300" placeholder="Brief intro about yourself..." id="bio"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Projects" class="form-label">Key Projects</label>
                            <textarea asp-for="Projects" rows="4" class="form-control" maxlength="500" placeholder="List your main projects..." id="projects"></textarea>
                            <span asp-validation-for="Projects" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Skills" class="form-label">Skills</label>
                            <input asp-for="Skills" type="text" class="form-control" maxlength="100" placeholder="e.g. Java, HTML" id="skills">
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Interests" class="form-label">Interests</label>
                            <input asp-for="Interests" type="text" class="form-control" maxlength="100" placeholder="e.g. Reading, Web Development" id="interests">
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ContactInformation" class="form-label">LinkedIn/GitHub/Other Link</label>
                            <input asp-for="ContactInformation" type="text" class="form-control" maxlength="100" placeholder="e.g. linkedin.com/in/yourprofile" id="contactInformation">
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ProfileImage" class="form-label">Personal Image</label>
                            <input type="file" asp-for="ProfileImage" class="form-control" accept="image/*" id="personalImage">
                        </div>

                        <button type="submit" class="btn btn-success btn-lg mt-4 w-100">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/student/script.js" asp-append-version="true"></script>
</body>
</html>
