@model IEnumerable<Student_Profile.Models.Post>

@{
    ViewData["Title"] = "My Posts";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/student/dashboard.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/student/cv.css" asp-append-version="true">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container">

            <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <span class="text-white">Port Said</span><span class="text-info ms-1">University</span>
            </a>
            <div class="d-flex align-items-center">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyProfile", "Student")">
                                <i class="bi bi-person-circle"></i> My Profile
                            </a>
                        </li>
                    </ul>
                </div>



            </div>
        </div>
    </nav>

    <div class="container my-5">

<h2 style="margin-top:30px; margin-bottom:20px;">My Posts</h2>

<a asp-action="CreatePost" class="btn btn-primary mb-3">Create New Post</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Content</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Content</td>
                <td>@post.Status</td>
                <td>@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="EditPost" asp-route-id="@post.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeletePost" asp-route-id="@post.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
