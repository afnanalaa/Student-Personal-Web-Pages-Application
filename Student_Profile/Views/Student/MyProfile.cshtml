@model Student_Profile.Models.StudentProfile
@{
    ViewData["Title"] = "My Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/student/profile.css" asp-append-version="true">

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <span class="text-white">Port Said</span><span class="text-info ms-1">University</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <div class="flex-grow-1 d-flex justify-content-center my-2 my-lg-0 position-relative mx-lg-4">
                    <div class="search-wrapper w-100" style="max-width: 500px;">
                        <div class="input-group bg-secondary bg-opacity-25 rounded-pill px-3 border border-secondary border-opacity-50">
                            <span class="input-group-text bg-transparent border-0 text-info">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" id="searchInput" autocomplete="off"
                                   class="form-control bg-transparent border-0 shadow-none text-white py-2"
                                   placeholder="Search for peers, skills or dept...">
                        </div>
                        <div id="searchSuggestions" class="position-absolute w-100 mt-2 shadow-lg bg-white rounded-3 overflow-hidden d-none">
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center justify-content-center">
                    <a class="btn btn-info rounded-pill px-4 fw-bold shadow-sm d-flex align-items-center btn-sm"
                       href="@Url.Action("StudentDashboard", "Student")">
                        <i class="bi bi-speedometer2 me-2"></i>
                        <span class="d-none d-sm-inline">My Dashboard</span>
                        <span class="d-inline d-sm-none">Dashboard</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container my-5">
        <div class="row">

            <div class="col-lg-4 mb-4">
                <div class="card p-4 sticky-top" style="top: 20px;">
                    <div class="text-center mb-4">
                        <img src="~/uploads/student-profiles/@Model.ProfileImageUrl" class="img-fluid rounded-circle mb-3 border border-4 border-primary" alt="Profile Photo">
                        <h4 class="fw-bold">@Model.User.FullName</h4>
                        <p class="text-muted">@Model.Department</p>
                    </div>
                    <a href="@Model.ContactInformation" target="_blank" class="btn btn-outline-primary mb-2">
                        <i class="bi bi-linkedin me-1"></i> View Contact
                    </a>
                </div>
            </div>

            <div class="col-lg-8">

                <div class="card p-4 mb-4 shadow-sm">
                    <h4 class="text-primary mb-3">Create New Post</h4>
                    @using (Html.BeginForm("CreatePost", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <textarea class="form-control mb-3" name="Content" rows="3" placeholder="Share a project update or an achievement..."></textarea>
                        <div class="d-flex justify-content-between align-items-center">
                            <input type="file" class="form-control w-auto" name="ImageFile" accept="image/*,.pdf">
                            <button type="submit" class="btn btn-success">Submit for Review</button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger mt-2">@TempData["Error"]</div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mt-2">@TempData["Success"]</div>
                    }
                </div>

                <h4 class="text-secondary mb-3">Recent Posts</h4>
                <div id="postsFeed">
                    @foreach (var post in ViewBag.ApprovedPosts)
                    {
                        <div class="card mb-4 post-item shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <img src="~/uploads/student-profiles/@post.User.StudentProfile.ProfileImageUrl"
                                         class="rounded-circle me-3"
                                         style="width: 40px; height: 40px;"
                                         alt="User Avatar">
                                    <div>
                                        <h6 class="mb-0 fw-bold">@post.User.FullName</h6>
                                        <small class="text-muted">@post.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</small>
                                    </div>
                                </div>
                                <p class="card-text">@post.Content</p>
                               
                                @if (!string.IsNullOrEmpty(post.ImageFile))
                                {
                                    <img src="@post.ImageFile" class="img-fluid rounded mb-3" alt="Post Image">

                                }

                                <div class="d-flex justify-content-end">
                                    <form asp-action="ReportPost"
                                          asp-controller="Student"
                                          method="post"
                                          onsubmit="return confirm('Are you sure you want to report this post?');">

                                        @Html.AntiForgeryToken()

                                        <input type="hidden" name="postId" value="@post.Id" />

                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-flag-fill"></i> Report
                                        </button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchInput').on('keyup', function () {
                let query = $(this).val();
                let suggestionsBox = $('#searchSuggestions');

                if (query.length > 1) {
                    $.ajax({
                        url: '/Home/LiveSearch',
                        data: { search: query },
                        success: function (data) {
                            if(data.trim() !== "") {
                                suggestionsBox.html(data).removeClass('d-none');
                            } else {
                                suggestionsBox.addClass('d-none');
                            }
                        }
                    });
                } else {
                    suggestionsBox.addClass('d-none');
                }
            });

            $(document).on('click', function (e) {
                if (!$(e.target).closest('.position-relative').length) {
                    $('#searchSuggestions').addClass('d-none');
                }
            });
        });
    </script>
</body>
</html>
