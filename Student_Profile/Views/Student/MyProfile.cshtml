 @model Student_Profile.Models.StudentProfile
@{
    ViewData["Title"] = "My Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/student/profile.css" asp-append-version="true">
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid container">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Port Said University</a>
        <div class="d-flex">
            <ul class="navbar-nav me-3">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Directory", "Students")">Students Directory</a>
                </li>
            </ul>
            <a class="btn btn-info" href="@Url.Action("Dashboard", "StudentHome")">
                <i class="bi bi-person-circle"></i> My Dashboard
            </a>
        </div>
    </div>
</nav>
<body>
<div class="container my-5">
    <div class="row">
        
        <div class="col-lg-4 mb-4">
            <div class="card p-4 sticky-top" style="top: 20px;">
                <div class="text-center mb-4">
                    @* عرض صورة الملف الشخصي من الـ Model *@
                        <img src="~/uploads/student-profiles/@Model.ProfileImageUrl" class="img-fluid rounded-circle mb-3 border border-4 border-primary" alt="Profile Photo">
                    <h4 class="fw-bold">@Model.User.FullName</h4>
                    <p class="text-muted">@Model.Department </p>
                </div>
                @* الأزرار يجب أن تحتوي على روابط فعلية *@
                <a href="@Model.ContactInformation" target="_blank" class="btn btn-outline-primary mb-2"><i class="bi bi-linkedin me-1"></i> View Contact</a>
            </div>
        </div>

        <div class="col-lg-8">
            
            <div class="card p-4 mb-4 shadow-sm">
                <h4 class="text-primary mb-3">Create New Post</h4>
                @using (Html.BeginForm("CreatePost", "Post", FormMethod.Post, new { id = "postCreationForm", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <textarea class="form-control mb-3" id="postContent" name="PostContent" rows="3" placeholder="Share a project update or an achievement..." required></textarea>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <input type="file" class="form-control w-auto" id="postFile" name="PostFile" accept="image/*,.pdf">
                        <button type="submit" class="btn btn-success">Submit for Review</button>
                    </div>
                }
            </div>
            
            <h4 class="text-secondary mb-3">Recent Posts by Students</h4>
            
            <div id="postsFeed">
                @* @foreach (var post in Model.ApprovedPosts)
                {
                    <div class="card mb-4 post-item shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@post.UserAvatarUrl" class="rounded-circle me-3" style="width: 40px; height: 40px;" alt="User Avatar">
                                <div>
                                    <h6 class="mb-0 fw-bold">@post.AuthorName</h6>
                                    <small class="text-muted">Posted @post.TimeAgo • @post.Department</small>
                                </div>
                            </div>
                            <h5 class="card-title fw-bold">@post.Title</h5>
                            <p class="card-text">@post.Content</p>
                            @if (!string.IsNullOrEmpty(post.ImageUrl))
                            {
                                <img src="@post.ImageUrl" class="img-fluid rounded mb-3" alt="Post Image">
                            }
                           
                        </div>
                    </div>
                } *@
            </div>
        </div>
    </div>
</div>

   @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/js/student/dashboard.js"></script>
    }
    
</body>
</html>